<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 状态栏 -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/title_red_bg">

        <ImageButton
            android:id="@+id/activity_news_detail_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/back"/>

        <TextView
            android:id="@+id/activity_news_detail_title"
            android:layout_width="180dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
        <!--字体-->
        <ImageButton
            android:id="@+id/activity_news_detail_textsize"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/activity_news_detail_share"
            android:background="@null"
            android:src="@drawable/icon_textsize"/>
        <!--分享-->
        <ImageButton
            android:id="@+id/activity_news_detail_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:src="@drawable/icon_share"/>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/activity_news_datail_pd"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <WebView
        android:id="@+id/activity_news_datail_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
